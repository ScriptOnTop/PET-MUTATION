-- üåü Pet Mutation Finder UI | Enhanced by ChatGPT | MADE BY SLIMEY HUB

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- üß¨ Mutation List
local mutations = {
	"Shiny", "Inverted", "Frozen", "Windy", "Golden", "Mega", "Tiny",
	"Tranquil", "IronSkin", "Radiant", "Rainbow", "Shocked", "Ascended"
}
local currentMutation = mutations[math.random(#mutations)]
local espVisible = true
local canReroll = true

-- üñºÔ∏è Screen GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "PetMutationFinder"
gui.ResetOnSpawn = false
gui.Parent = PlayerGui

-- ü™ü Main UI Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 280, 0, 230)
frame.Position = UDim2.new(0.35, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(20, 22, 28)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 14)

local stroke = Instance.new("UIStroke", frame)
stroke.Color = Color3.fromRGB(0, 255, 170)
stroke.Thickness = 2
stroke.Transparency = 0.1

-- üßæ Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 45)
title.Text = "üß¨ Pet Mutation Finder"
title.TextColor3 = Color3.fromRGB(0, 255, 170)
title.BackgroundTransparency = 1
title.Font = Enum.Font.FredokaOne
title.TextSize = 22
title.TextStrokeTransparency = 0.4
title.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

-- üîò Create Button Function
local function createButton(text, yPos, color)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.85, 0, 0, 38)
	btn.Position = UDim2.new(0.075, 0, 0, yPos)
	btn.BackgroundColor3 = color
	btn.Text = text
	btn.Font = Enum.Font.GothamSemibold
	btn.TextSize = 16
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.AutoButtonColor = false

	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)
	local stroke = Instance.new("UIStroke", btn)
	stroke.Color = Color3.fromRGB(30, 30, 30)
	stroke.Thickness = 1.5

	btn.MouseEnter:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {
			BackgroundColor3 = color:Lerp(Color3.new(1,1,1), 0.1)
		}):Play()
	end)
	btn.MouseLeave:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {
			BackgroundColor3 = color
		}):Play()
	end)

	btn.Parent = frame
	return btn
end

local reroll = createButton("üé≤ Reroll Mutation", 60, Color3.fromRGB(85, 170, 255))
local toggle = createButton("üëÅÔ∏è Toggle ESP", 110, Color3.fromRGB(140, 255, 170))

-- üè∑Ô∏è Credit Footer
local credit = Instance.new("TextLabel", frame)
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -22)
credit.Text = "üõ†Ô∏è Made by SLIMEY HUB"
credit.TextColor3 = Color3.fromRGB(120, 120, 120)
credit.BackgroundTransparency = 1
credit.Font = Enum.Font.Gotham
credit.TextSize = 12

-- üîé Find Mutation Machine in Workspace
local function findMachine()
	for _, obj in pairs(Workspace:GetDescendants()) do
		if obj:IsA("Model") and obj.Name:lower():find("mutation") then
			return obj
		end
	end
end

local machine = findMachine()
if not machine or not machine:FindFirstChildWhichIsA("BasePart") then
	warn("‚ö†Ô∏è Mutation Machine not found.")
	return
end

local basePart = machine:FindFirstChildWhichIsA("BasePart")

-- üí° ESP Billboard
local espGui = Instance.new("BillboardGui", basePart)
espGui.Name = "MutationESP"
espGui.Adornee = basePart
espGui.Size = UDim2.new(0, 200, 0, 40)
espGui.StudsOffset = Vector3.new(0, 4, 0)
espGui.AlwaysOnTop = true

local espLabel = Instance.new("TextLabel", espGui)
espLabel.Size = UDim2.new(1, 0, 1, 0)
espLabel.BackgroundTransparency = 1
espLabel.Font = Enum.Font.FredokaOne
espLabel.TextSize = 24
espLabel.TextStrokeTransparency = 0.4
espLabel.TextStrokeColor3 = Color3.new(0, 0, 0)
espLabel.Text = currentMutation

-- üåà Rainbow Animation for ESP
local hue = 0
RunService.RenderStepped:Connect(function()
	if espVisible then
		hue = (hue + 0.005) % 1
		espLabel.TextColor3 = Color3.fromHSV(hue, 1, 1)
	end
end)

-- üîÅ Mutation Reroll w/ Cooldown
local function animateMutationReroll()
	if not canReroll then return end
	canReroll = false
	reroll.Text = "‚è≥ Cooldown (20s)"
	reroll.BackgroundColor3 = Color3.fromRGB(80, 80, 80)

	local rollTime = 2
	local interval = 0.1
	for i = 1, math.floor(rollTime / interval) do
		espLabel.Text = mutations[math.random(#mutations)]
		wait(interval)
	end

	currentMutation = mutations[math.random(#mutations)]
	espLabel.Text = currentMutation

	-- Cooldown delay
	for i = 20, 1, -1 do
		reroll.Text = "‚è≥ Cooldown ("..i.."s)"
		wait(1)
	end

	reroll.Text = "üé≤ Reroll Mutation"
	reroll.BackgroundColor3 = Color3.fromRGB(85, 170, 255)
	canReroll = true
end

-- üîò Events
toggle.MouseButton1Click:Connect(function()
	espVisible = not espVisible
	espGui.Enabled = espVisible
end)

reroll.MouseButton1Click:Connect(animateMutationReroll)
